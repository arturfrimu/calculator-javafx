<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.arturfrimu.javafx.testjavafx.CalculatorController"
          hgap="10" vgap="10" alignment="CENTER">

    <TextField fx:id="display" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <!-- Row 1 -->
    <Button text="7" onAction="#handleNumber" GridPane.columnIndex="0" GridPane.rowIndex="1" minWidth="50" minHeight="50"/>
    <Button text="8" onAction="#handleNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" minWidth="50" minHeight="50"/>
    <Button text="9" onAction="#handleNumber" GridPane.columnIndex="2" GridPane.rowIndex="1" minWidth="50" minHeight="50"/>
    <Button text="+" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="1" minWidth="50" minHeight="50"/>

    <!-- Row 2 -->
    <Button text="4" onAction="#handleNumber" GridPane.columnIndex="0" GridPane.rowIndex="2" minWidth="50" minHeight="50"/>
    <Button text="5" onAction="#handleNumber" GridPane.columnIndex="1" GridPane.rowIndex="2" minWidth="50" minHeight="50"/>
    <Button text="6" onAction="#handleNumber" GridPane.columnIndex="2" GridPane.rowIndex="2" minWidth="50" minHeight="50"/>
    <Button text="-" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="2" minWidth="50" minHeight="50"/>

    <!-- Row 3 -->
    <Button text="1" onAction="#handleNumber" GridPane.columnIndex="0" GridPane.rowIndex="3" minWidth="50" minHeight="50"/>
    <Button text="2" onAction="#handleNumber" GridPane.columnIndex="1" GridPane.rowIndex="3" minWidth="50" minHeight="50"/>
    <Button text="3" onAction="#handleNumber" GridPane.columnIndex="2" GridPane.rowIndex="3" minWidth="50" minHeight="50"/>
    <Button text="*" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="3" minWidth="50" minHeight="50"/>

    <!-- Row 4 -->
    <Button text="0" onAction="#handleNumber" GridPane.columnIndex="0" GridPane.rowIndex="4" minWidth="50" minHeight="50"/>
    <Button text="C" onAction="#handleClear" GridPane.columnIndex="1" GridPane.rowIndex="4" minWidth="50" minHeight="50"/>
    <Button text="=" onAction="#handleEquals" GridPane.columnIndex="2" GridPane.rowIndex="4" minWidth="50" minHeight="50"/>
    <Button text="/" onAction="#handleOperator" GridPane.columnIndex="3" GridPane.rowIndex="4" minWidth="50" minHeight="50"/>
</GridPane>
